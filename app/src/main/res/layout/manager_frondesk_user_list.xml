<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/background1">

    <ImageView
        android:id="@+id/manager_clerkList_image"
        android:layout_margin="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:src="@tools:sample/avatars"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/manager_clerkList_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Online/Offline"
            android:textColor="@color/black"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/manager_clerkList_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/manager_clerkList_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/manager_clerkList_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textColor="@color/black"
            android:textSize="24sp"/>

    </LinearLayout>
    
    <ImageView
        android:id="@+id/manager_clerkList_delete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/close"/>

</LinearLayout>