    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:fontFamily="@font/eb_garamond_semi_bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/guest_email"/>

            <!--<EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/edttxt_bg"
                android:text="     Email"
                android:textAllCaps="false"
                android:textSize="18sp">-->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/manager_login_Email"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:textColor="@color/black"
                    android:background="@drawable/edttxt_bg"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="18dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/guest_password"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--<EditText
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/edttxt_bg"
                    android:text="     Password"
                    android:textAllCaps="false"
                    android:textSize="18sp"/>-->

                <!-- <androidx.appcompat.widget.AppCompatEditText
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:background="@drawable/password_eye"
                     android:layout_marginRight="200dp"/>-->

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleDrawable="@drawable/password_eye">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/manager_login_Password"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:hint="Password"
                        android:textColor="@color/black"
                        android:password="true"
                        android:background="@drawable/edttxt_bg"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginStart="220dp">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="700dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/manager_login_Login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_bg"
            android:layout_gravity="center"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="@font/eb_garamond_semi_bold"/>

    </LinearLayout>

