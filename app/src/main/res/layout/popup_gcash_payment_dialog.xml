<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

 <ImageView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/gcash"/>

 <ImageView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/qrcode"/>

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:fontFamily="@font/eb_garamond_bold"
     android:text="09101885471"
     android:textColor="@color/black"
     android:textSize="32sp"/>

 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:fontFamily="@font/balsamiqsans_regular"
     android:gravity="center"
     android:text="Your GCash number that use to pay the transaction:"
     android:textColor="@color/black"
     android:textSize="24sp"/>

 <EditText
     android:id="@+id/popup_GCash_guestNumber"
     android:layout_width="300dp"
     android:layout_height="wrap_content"
     android:gravity="center"
     android:minHeight="48dp"
     tools:ignore="SpeakableTextPresentCheck" />

 <Spinner
     android:layout_width="300dp"
     android:layout_height="48dp"/>


 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:fontFamily="@font/balsamiqsans_regular"
     android:text="Reference number:"
     android:textColor="@color/black"
     android:textSize="24sp"/>

 <EditText
     android:id="@+id/popup_GCash_referenceNum"
     android:layout_width="300dp"
     android:layout_height="wrap_content"
     android:gravity="center"
     android:minHeight="48dp"
     tools:ignore="SpeakableTextPresentCheck" />

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/popup_GCash_confirm"
     android:layout_width="200dp"
     android:layout_height="wrap_content"
     android:text="Confirm"
     android:textSize="24sp"/>

</LinearLayout>