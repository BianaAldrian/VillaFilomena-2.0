<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manager.manager_room_cottage_details1"
    android:background="@drawable/background1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/cardview_bg">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_back"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Room Details"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/eb_garamond_regular"
                android:textSize="32sp"
                android:textColor="#060606"/>

            <ImageView
                android:id="@+id/guestHomepage_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/edit"/>

            <ImageView
                android:id="@+id/guestHomepage_save"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/save"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background=""
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Room Type"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:fontFamily="@font/balsamiqsans_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:text="Details:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/balsamiqsans_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:text="Living room with 2 sofa chair and 1 dining table \n1 bedroom with 2 double deck \n1 bathroom \n1 sink"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/balsamiqsans_regular"/>

    </LinearLayout>

</LinearLayout>