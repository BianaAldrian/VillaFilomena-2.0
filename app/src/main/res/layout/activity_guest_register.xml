<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    tools:context=".Guest.Guest_Register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/eb_garamond_bold"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="26sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/Guest_register_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edttxt_bg"
        android:hint="Email"
        android:inputType="textEmailAddress"
        tools:ignore="Autofill,HardcodedText"/>

    <EditText
        android:id="@+id/Guest_register_password1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edttxt_bg"
        android:hint="Password"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/Guest_register_password2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edttxt_bg"
        android:hint="Confirm Password"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/Guest_register_FName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edttxt_bg"
        android:hint="First Name"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/Guest_register_LName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edttxt_bg"
        android:hint="Last Name"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/Guest_register_contact"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edttxt_bg"
        android:hint="Contact Number"
        tools:ignore="Autofill,HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Guest_register_registerBtn"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_bg"
        android:text="Register"
        tools:ignore="HardcodedText,DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/Guest_register_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/eb_garamond_bold"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

</LinearLayout>