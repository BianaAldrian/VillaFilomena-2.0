<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".Manager.Manager_GuestHomepage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/cardview_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Guest Home Page"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/eb_garamond_regular"
                android:textSize="32sp"
                android:textColor="#060606"/>

            <ImageView
                android:id="@+id/guestHomepage_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/edit"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banner"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/guestHomepage_editBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"/>
        </LinearLayout>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:src="@drawable/banner"/>

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/guestHomepage_editIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"/>
        </LinearLayout>

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Find your own quiet haven. The Villa Filomena Resort in Cavite, Philippines is situated on the alpines of South Cavite. This Natural Spring resort is an exclusive resort placing emphasis on your comfort and solitude."
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Videos"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/guestHomepage_editVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Images"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/guestHomepage_editImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>